!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %title JesuaRorblog
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-inverse
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'Jesua ROR BLog', posts_path, class: 'navbar-brand'
        #navbar.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li= link_to 'Home', posts_path
            %li= link_to 'About', static_pages_about_path
            %li= link_to 'Contact', static_pages_contact_path
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              %li
                = link_to t('navbar.logout'), destroy_user_session_path, method: :delete
            - else
              %li
                = link_to t('navbar.signin'), new_user_session_path
              %li
                = link_to t('navbar.signup'), new_user_registration_path
    .body
      .container
        - if notice
          %p.bg-success= notice
        - if alert
          %p.bg-danger= alert
      .container
        = yield
