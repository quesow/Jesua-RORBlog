.row
  .col-xs-12.col-md-5.text-center
    =render template: 'static_pages/about'
  .col-xs-12.col-md-7
    %h1 Leave a comment!
    %table.table
      %thead
        %tr
          %th Name
          %th Title
          %th Content
          %th{:colspan => "3"}
      %tbody
        - @posts.each do |post|
          %tr
            %td= post.user.nil? ? "Anonymous" : post.user.name
            %td= post.title
            %td= post.content
            %td= link_to 'Show', post, class: 'btn btn-warning'
            -if !post.user.nil? && post.user.id == current_user.id
              %td= link_to 'Edit', edit_post_path(post), class: 'btn btn-primary'
              %td= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
    %br/
    = link_to 'New Post', new_post_path, class: 'btn btn-success btn-lg'
